<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_above="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            
            <fragment android:name="com.ydzy.lzhang.fragment.IndexFragment"
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            
            <fragment android:name="com.ydzy.lzhang.fragment.SeacherFragment"
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            
            <fragment android:name="com.ydzy.lzhang.fragment.MeFragment"
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            
            <fragment android:name="com.ydzy.lzhang.fragment.MoreFragment"
                android:id="@+id/tab4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            
            
       </FrameLayout>
       
        <TabWidget
            android:id="@android:id/tabs"
            android:tabStripEnabled="false"
            android:showDividers="none"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TabWidget>
    </RelativeLayout>
</TabHost>
