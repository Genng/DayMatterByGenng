<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/index_top_bg" >

    <!-- android:background="@drawable/head_tx_selector" -->

    <Button
        android:id="@+id/head_left_bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/left_bt_selector"
        android:onClick="onClick"
        android:padding="12dp"
        android:text="@string/head_back"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/head_left_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/left_bt_selector"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:onClick="onClick"
        android:paddingTop="10dp"
        android:visibility="gone"
        android:src="@drawable/seacher_top_jian" />

    <TextView
        android:id="@+id/head_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageButton
            android:id="@+id/head_right_bt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/left_bt_selector"
            android:onClick="onClick"
            android:padding="12dp"
            android:visibility="gone" 
            android:src="@drawable/tab_1"
            android:textColor="@color/white" />
    
    <Button
        android:id="@+id/head_right_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/left_bt_selector"
        android:onClick="onClick"
        android:padding="12dp"
        android:textColor="@color/white"
        android:visibility="gone" />


</RelativeLayout>